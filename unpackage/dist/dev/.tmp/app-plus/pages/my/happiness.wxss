
.top_bgcolor{
	width: 100%;
	height: 538rpx;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/hippiness_01.png') no-repeat center;
	background-size: 100% 100%;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding-top: 120rpx;
	box-sizing: border-box;
}
.top_bgcolor .allow{
	font-size: 26rpx;
	color: #f9dad0;
}
.top_bgcolor .show{
	margin: 10rpx 0;
}
.top_bgcolor .show .num{
	font-size: 80rpx;
	color: #fff;
}
.top_bgcolor .show .btn{
	width: 100rpx;
	height: 50rpx;
	border: 1rpx solid #fff;
	border-radius: 10rpx;
	text-align: center;
	line-height: 48rpx;
	font-size: 30rpx;
	color: #fff;
	margin-top: 24rpx;
}
.already{
	font-size: 30rpx;
	color: #fff;
}
.box{
	width: 100%;
	margin-top: 60rpx;
}
.box .fl{
	width: 50%;
}
.box .earnings{
	font-size: 26rpx;
	color: #f9dad0;
}
.box .earnings_num{
	font-size: 56rpx;
	color: #fff;
	margin-top: 10rpx;
}
.content{
	width: 100%;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-top: 20rpx solid #f5f5f5;
}
.content .list{
	height: 172rpx;
	line-height: 172rpx;
	font-size: 36rpx;
	color: #343434;
}
.content .list:not(:last-child){
	border-bottom: 2rpx solid #f2f2f2;
}
.content ._i{
	width: 40rpx;
	height: 40rpx;
	text-align: center;
	line-height: 40rpx;
	margin-top: 66rpx;
}

