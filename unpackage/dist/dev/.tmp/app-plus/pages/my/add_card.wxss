
.container{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: #f5f5f5;
}
.title{
	height: 76rpx;
	font-size: 28rpx;
	color: #999;
	line-height: 76rpx;
	margin-top: 88rpx;
	padding-left: 30rpx;
}
.list{
	width: 100%;
	height: 100rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #e5e5e5;
	padding: 0 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 30rpx;
	line-height: 100rpx;
}
.list .left{
	width: 32%;
	height: 100rpx;
	color: #666;
}
.list .right{
	width: 68%;
	height: 100rpx;
	color: #333;
	text-align: right;
}
.list .right .ipt{
	float: right;
	width: 100%;
	height: 40rpx;
	line-height: 60rpx;
	margin-top: 30rpx;
	text-align: right;
}
.list .right .icon{
	width: 44rpx;
	height: 44rpx;
	margin: 30rpx 0 0 10rpx;
	color: #333;
	line-height: 44rpx;
}
.list .right .icon .icongengduo{
	color: #ccc;
}
.heig{
	height: 180rpx;
}
.heig textarea{
	width: 90%;
	height: 130rpx;
	margin-top: 32rpx;
	font-size: 30rpx;
}


