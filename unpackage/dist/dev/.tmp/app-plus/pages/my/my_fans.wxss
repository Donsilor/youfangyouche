
.bg_img{
	width: 100%;
	height: 664rpx;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/fans_bg.png') no-repeat center;
	background-size: 100% 100%;
	padding-top: 100rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.bg_img .fans{
	font-size: 30rpx;
	text-align: center;
	color: #fff;
}
.bg_img .fans_num{
	font-size: 60rpx;
	text-align: center;
	color: #fff;
	margin-top: 20rpx;
}
.bg_img .recommend{
	font-size: 26rpx;
	text-align: center;
	color: #fff;
	margin-top: 20rpx;
}
.box{
	width: 100%;
	min-height: 300rpx;
	background-color: #fff;
	border-radius: 64rpx 64rpx 0 0;
	margin-top: -280rpx;
	padding: 60rpx 20rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.box .tit{
	font-size: 34rpx;
	color: #333;
}
.box .line{
	width: 10rpx;
	height: 30rpx;
	background: -webkit-gradient(linear, left top, left bottom, from(#ff8e06), to(#ff5011));
	background: -o-linear-gradient(top, #ff8e06, #ff5011);
	background: linear-gradient(top, #ff8e06, #ff5011);
	margin: 8rpx 10rpx 0 0;
}
.box .list{
	width: 100%;
	padding: 30rpx 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.box .list:not(:last-child){
	border-bottom: 1rpx solid #e5e5e5;
}
.box .left{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin-right: 30rpx;
}
.box .left image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.box .right{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.box .right .user_name{
	font-size: 30rpx;
	color: #333;
	overflow: hidden;
	margin-bottom: 10rpx;
}
.box .user_message{
	font-size: 26rpx;
	color: #888;
}
.box .user_message ._span{
	margin-right: 20rpx;
}

