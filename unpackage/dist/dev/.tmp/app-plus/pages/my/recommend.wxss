
.bg_img{
	width: 100%;
	height: 664rpx;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/fans_bg.png') no-repeat center;
	background-size: 100% 100%;
	padding-top: 100rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.box{
	position: relative;
	width: 100%;
	min-height: 460rpx;
	background-color: #fff;
	border-radius: 64rpx 64rpx 0 0;
	margin-top: -400rpx;
	padding: 60rpx 20rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.box .user_img{
	position: absolute;
	top: 0;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}
.box .user_img image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.text{
	font-size: 30rpx;
	color: #333;
	margin-top: 60rpx;
	text-align: center;
}
.recommend{
	width: 610rpx;
	height: 100rpx;
	margin: 60rpx auto;
	border-radius: 8rpx;
}
.recommend .line{
	width: 5rpx;
	height: 44rpx;
	background-color: #ff8e06;
	margin: 28rpx 20rpx 28rpx 40rpx;
}
.recommend .left{
	width: 450rpx;
	height: 100rpx;
	border: 2rpx solid #eee;
	border-right: 0;
	border-radius: 8rpx 0 0 8rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.recommend .ipt{
	width: 300rpx;
	height: 60rpx;
	font-size: 30rpx;
	color: #333;
	margin-top: 20rpx;
}
.recommend .right{
	width: 160rpx;
	height: 100rpx;
	background-color: #ff8e06;
	font-size: 30rpx;
	color: #fff; 
	text-align: center;
	line-height: 100rpx;
	border-radius: 0 8rpx 8rpx 0;
}
.recommend_my .left{
	border: none;
	background-color: #f6f6ff;
}
.recommend_my .left .line{
	background-color: #ff5011;
}
.recommend_my .left .ipt{
	color: #505052;
}
.recommend_my .right{
	background-color: #ff5011;
}
.recommend .my_reco{
	width: 100%;
	height: 100rpx;
	border: 2rpx solid #eee;
	border-radius: 8rpx;
	line-height: 100rpx;
	text-align: center;
	font-size: 30rpx;
	color: #333;
}
.recommend .my_reco .name{
	margin-right: 40rpx;
}
.explain{
	width: 710rpx;
	margin: 0 20rpx 30rpx;
}
.explain .tit{
	font-size: 30rpx;
	color: #999;
	text-align: center;
}
.explain .txt{
	font-size: 24rpx;
	color: #999;
	line-height: 36rpx;
	margin-top: 30rpx;
}

