
.container{
	position: fixed;
	width: 100%;
	height: 100%;
	background-color: #f5f5f5;
}
.title{
	height: 76rpx;
	line-height: 76rpx;
	font-size: 28rpx;
	color: #999;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.add{
	height: 100rpx;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #fff;
	font-size: 30rpx;
	line-height: 100rpx;
	color: #666;
}
.add .text{
	width: 180rpx;
	height: 100rpx;
}
.add .right{
	width: 400rpx;
	height: 100rpx;
}
.box{
	background-color: #fff;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.box .fill{
	height: 150rpx;
	font-size: 50rpx;
	line-height: 150rpx;
	color: #333;
	border-bottom: 1rpx solid #e5e5e5;
}
.box .ipt{
	width: 500rpx;
	height: 50rpx;
	display: inline-block;
	margin: 50rpx 0 0 20rpx;
}
.box .text{
	height: 84rpx;
	line-height: 84rpx;
	font-size: 26rpx;
	color: #999;
}
.remind{
	font-size: 24rpx;
	color: #999;
	text-align: center;
}

