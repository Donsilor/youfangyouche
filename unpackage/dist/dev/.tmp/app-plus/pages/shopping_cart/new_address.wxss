	width: 32%;
	height: 100rpx;
	color: #666;
}
.list .right{
	width: 68%;
	height: 100rpx;
	color: #333;
}
.list .right .ipt{
	width: 80%;
	height: 40rpx;
	line-height: 60rpx;
	margin-top: 30rpx;
}
.list .right .icon{
	width: 44rpx;
	height: 44rpx;
	margin-top: 30rpx;
	line-height: 44rpx;
	color: #ccc;
}
