
page{
	background-color: #f5f5f5;
}
.container{
	background-color: #f5f5f5;
	padding-bottom: 120rpx;
}
.container .list{
	width: 100%;
	padding: 30rpx 20rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.list{
	background-color: #fff;
	margin-bottom: 20rpx;
}
.list .user{
	font-size: 30rpx;
	color: #333;
	font-weight: bold;
}
.list .user ._span{
	margin-right: 20rpx;
}
.list .addr{
	font-size: 26rpx;
	color: #666;
	margin-top: 20rpx;
}
.list .box{
	width: 100%;
	height: 84rpx;
	line-height: 84rpx;
	border-top: 1rpx solid #f5f5f5;
	margin-top: 30rpx;
	font-size: 26rpx;
	color: #999;
}
.list .box .set{
	color: #f70c12;
}
.list .box .del{
	margin-left: 20rpx;
}
.add_address{
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 2;
	width: 100%;
	height: 98rpx;
	background: -webkit-gradient(linear, left top, right top, from(#ff8e06), to(#ff5011));
	background: -o-linear-gradient(left, #ff8e06, #ff5011);
	background: linear-gradient(left, #ff8e06, #ff5011);
	background: -webkit-linear-gradient(left, #ff8e06, #ff5011);
	text-align: center;
	line-height: 98rpx;
	font-size: 36rpx;
	color: #fff;
	letter-spacing: 2rpx;
}

