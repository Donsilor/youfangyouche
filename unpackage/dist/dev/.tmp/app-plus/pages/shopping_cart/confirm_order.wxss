
page{
	background-color: #f5f5f5;
}
.container{
	padding: 0 0 150rpx;
}
.address{
	width: 100%;
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding: 24rpx 0;
}
.address .icon{
	width: 32rpx;
	height: 38rpx;
	margin: 0 20rpx;
	line-height: 38rpx;
}
.address .icon .icondizhi1{
	color: #fc921f;
}
.address .mid{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	padding-right: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.address .mid .user{
	font-size: 30rpx;
	color: #000;
	margin-bottom: 4rpx;
	font-weight: bold;
}
.address .mid ._span{
	margin-right: 20rpx;
}
.address .mid .addr{
	font-size: 24rpx;
	color: #666;
}
.address .icon_2{
	height: 44rpx;
	width: 44rpx;
	margin-right: 20rpx;
	line-height: 44rpx;
	color: #ccc;
}
.strip{
	width: 100%;
	height: 10rpx;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/cart_icon_01.png') no-repeat center;
	background-size: 100% 100%;
}
.box{
	padding: 0 20rpx;
	background-color: #fff;
	border-top: 20rpx solid #f5f5f5;
	border-bottom: 20rpx solid #f5f5f5;
}
.box .list{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding: 30rpx 0;
	border-bottom: 1rpx solid #eee;
}
.box .list .icon,
.total .all .icon{
	width: 44rpx;
	height: 44rpx;
	border-radius: 50%;
	margin: 0 20rpx;
	border: 1rpx solid #ccc;
}
.box .list .icon.active,
.total .all .icon.active{
	border-color: #f70c12;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/icon_02.png') no-repeat center;
	background-size: 100% 100%;
}
.box .list .img_box{
	width: 180rpx;
	height: 180rpx;
	background-color: saddlebrown;
}
.box .list .img_box image{
	width: 100%;
	height: 100%;
}
.box .list .right{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	height: 180rpx;
	overflow: hidden;
	margin: 0 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.box .list .right .text{
	font-size: 26rpx;
	color: #333;
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	width: 90%;
}
.box .list .right .type{
	background-color: #f5f5f5;
	height: 40rpx;
	padding: 0 12rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	border-radius: 5px;
	display: inline-block;
}
.box .list .right .price{
	color: #f70c12;
	font-size: 30rpx;
}
.box .list .right .price .small{
	font-size: 20rpx;
}
.quantity{
	font-size: 26rpx;
	color: #666;
}
.box_r{
	background-color: #fff;
	padding: 20rpx;
	margin-bottom: 20rpx;
}
.box_r .list_r{
	height: 50rpx;
}
.box_r .list_r .text{
	font-size: 26rpx;
	color: #333;
	height: 50rpx;
	width: 20%;
	line-height: 50rpx;
}
.box_r .list_r .right{
	height: 50rpx;
	width: 60%;
	font-size: 26rpx;
	color: #888;
	line-height: 50rpx;
	text-align: right;
}
.box_r .list_r .right .fr{
	height: 50rpx;
	line-height: 50rpx;
}
.box_r .list_r .right .icon{
	width: 28rpx;
	height: 28rpx;
	margin: 11rpx 0 0 6rpx;
	line-height: 32rpx;
	color: #ccc;
}
.box_r .list_r .right .ipt{
	height: 40rpx; 
	text-align: right;
}
.box_r .color{
	font-size: 24rpx;
	color: #999;
}
.box_r .list_r .switch{
	margin-top: -30rpx;
}
.total{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 98rpx;
	z-index: 6;
}
.total .left{
	width: 73%;
	height: 100%;
	background-color: #fff;
	line-height: 98rpx;
	font-size: 28rpx;
	color: #888;
}
.total .left .color{
	color: #ff1919;
}
.total .left .icon{
	margin: 24rpx 20rpx 14rpx 28rpx;
}
.total .left .text{
	margin-right: 1rem;
}
.total .del{
	width: 27%;
	height: 100%;
	background: -webkit-linear-gradient(left, #ff8e06, #ff5011);
	text-align: center;
	line-height: 98rpx;
	font-size: 32rpx;
	color: #fff;
}

