
.container{
	width: 100%;
	padding: 0 20rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	text-align: justify;
}
.container .title{
	font-size: 36rpx;
	color: #000;
	padding-left: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.container .hint{
	font-size: 30rpx;
	color: #888;
	margin: 30rpx 0 30rpx 10rpx;
}
.container .hint ._span{
	margin-right: 20rpx;
}
.container .img_box{
	width: 100%;
	height: 390rpx;
	margin-bottom: 30rpx;
}
.container .img_box image{
	width: 100%;
	height: 100%;
}
.container .text{
	font-size: 34rpx;
	color: #111;
	line-height: 50rpx;
	text-align: justify;
}

