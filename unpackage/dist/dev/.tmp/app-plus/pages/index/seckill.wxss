
.banner{
	width: 750rpx;
	height: 252rpx;
}
.banner image{
	width: 100%;
	height: 100%;
}
.activity{
	width: 100%;
	height: 116rpx;
	overflow: scroll;
	position: relative;
}
.activity .scroll{
	width: 5000rpx;
	height: 116rpx;
	position: absolute;
	left: 0;
	top: 0;
}
.activity .list{
	width: 190rpx;
	height: 116rpx;
	position: relative;
}
.activity .list .square{
	width: 190rpx;
	height: 100rpx;
	background-color: #fc921f;
	font-size: 26rpx;
	color: #666;
	padding-top: 12rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	text-align: center;
	line-height: 36rpx;
	opacity: .6;
}
.activity .list .triangle{
	position: absolute;
	top: 100rpx;
	left: 50%;
	-ms-transform: translateX(-50%);
	    transform: translateX(-50%);
	-webkit-transform: translateX(-50%);
	width: 0;
	height: 0;
	border-style: solid;
	border-color: transparent;
	border-width: 16rpx 12rpx 0 12rpx;
}
.activity .on .square{
	opacity: 1;
}
.activity .on .triangle{
	border-color: #fc921f transparent transparent transparent;
}
.line_box{
	position: relative;
	width: 690rpx;
	border-top: 3rpx solid #e7e7e7;
	margin: 50rpx 30rpx;
}
.line_box .content{
	position: absolute;
	top: -20rpx;
	left: 50%;
	-ms-transform: translateX(-50%);
	    transform: translateX(-50%);
	-webkit-transform: translateX(-50%);
	font-size: 30rpx;
	line-height: 32rpx;
	padding: 0 20rpx;
	background-color: #fff;
	font-weight: normal;
}
.line_box .content ._span{
	margin-left: 10rpx;
}
