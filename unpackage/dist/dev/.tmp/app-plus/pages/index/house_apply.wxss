
.container{
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.list,
.opinion{
	width: 100%;
	height: 100rpx;
	font-size: 30rpx;
	color: #333;
	line-height: 100rpx;
	border-bottom: 1rpx solid #ddd;
}
.list .left{
	width: 180rpx;
	height: 100rpx;
}
.list .right{
	width: 530rpx;
	height: 100rpx;
	line-height: 100rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.list .self{
	width: auto;
	max-width: 522rpx;
}
.list .right .ite{
	margin-left: 36rpx;
}
.list .right .ite .circle{
	width: 46rpx;
	height: 46rpx;
	border: 1rpx solid #ccc;
	border-radius: 50%;
	margin: 26rpx 10rpx 0 0;
}
.list .active .circle{
	border-color: #fc921f !important;
	background: url('https://szdbi.oss-cn-shenzhen.aliyuncs.com/youfangyouche/icon_02.png') no-repeat center;
	background-size: 100% 100%;
}
.list .ipt{
	float: right;
	width: 400rpx;
	height: 40rpx;
	margin-top: 30rpx;
	text-align: right;
}
.opinion{
	border: none;
}
.texts{
	width: 100%;
	height: 400rpx;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 1rpx solid #ddd;
	border-radius: 5rpx;
}
