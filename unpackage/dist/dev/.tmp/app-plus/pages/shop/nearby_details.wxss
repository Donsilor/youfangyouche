
.img_box{
	width: 100%;
	height: 400rpx;
}
.img_box image{
	width: 100%;
	height: 100%;
}
.name{
	font-size: 30rpx;
	color: #333;
	margin: 30rpx 20rpx;
	font-weight: bold;
}
.list{
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-bottom: 30rpx;
	font-size: 28rpx;
	color: #666;
}
.list .left{
	width: 40rpx;
	text-align: center;
	line-height: 46rpx;
	margin-right: 20rpx;
}
.list .right{
	width: 650rpx;
}
.footer{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 98rpx;
	background-color: #f5f5f5;
}
.footer .left{
	width: 250rpx;
	text-align: center;
	font-size: 24rpx;
	color: #666;
	padding-top: 12rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.footer .left ._i{
	font-size: 38rpx;
	margin: 20rpx 0;
}
.footer .right{
	width: 500rpx;
	height: 98rpx;
	background: -webkit-gradient(linear, left top, right top, from(#ff8e06), to(#ff5011));
	background: -o-linear-gradient(left, #ff8e06, #ff5011);
	background: linear-gradient(left, #ff8e06, #ff5011);
	text-align: center;
	line-height: 98rpx;
	font-size: 32rpx;
	color: #fff;
}
.footer .right .relation{
	margin-right: 20rpx;
}

