
page{
	background-color: #f5f5f5;
}
.filter{
	position: fixed;
	top: 0;
	left: 0;
	z-index: 3;
	width: 100%;
	height: 80rpx;
	background-color: #fff;
	line-height: 80rpx;
}
.filter .list{
	width: 25%;
	height: 100%;
	text-align: center;
	font-size: 26rpx;
	color: #333;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.filter .list.active{
	color: #fc921f;
}
.filter .list .inline{
	display: inline-block;
	text-align: center;
}
.filter .line_box{
	margin: 0 0 -2rpx 8rpx;
}
.filter .triangle1{
	width: 0;
	height: 0;
	border-style: solid;
	border-width: 0 7rpx 10rpx 7rpx;
	border-color: transparent transparent #000 transparent;	
	margin-bottom: 4rpx;
}
.filter .triangle2{
	width: 0;
	height: 0;
	border-style: solid;
	border-width: 10rpx 7rpx 0 7rpx;
	border-color: #000 transparent transparent transparent;
}
.filter .triangle1.on{
	border-color: transparent transparent #fc921f transparent;
}
.filter .triangle2.on{
	border-color: #fc921f transparent transparent transparent;
}
.content{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 20rpx 20rpx 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #f5f5f5;
}
.content .list{
	width: 344rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
	padding-bottom: 10rpx;
}
.content .list .img_box{
	width: 344rpx;
	height: 344rpx;
}
.content .list .img_box image{
	width: 100%;
	height: 100%;
}
.content .list .text{
	font-size: 26rpx;
	color: #353535;
	margin: 20rpx 0 16rpx;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.content .list .price{
	padding: 0 20rpx;
}
.content .list .price .color{
	font-size: 32rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	color: #ff1919;
}
.content .list .price .color .small{
	font-size: 22rpx;
}
.content .list .price .sales_volume{
	font-size: 22rpx;
	color: #999;
}



