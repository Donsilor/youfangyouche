
.title{
	position: fixed;
	top: 3.6rem;
	left: 0;
	z-index: 2;
	width: 100%;
	height: 4.4rem;
	background-color: #fff;
	text-align: center;
	line-height: 4.4rem;
	font-size: 1.7rem;
	color: #333;
	padding: 0 1rem;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.title .icon{ 
	width: 2rem;
	height: 2rem;
	margin-top: 1.1rem;
}
.container .left{
	position: fixed;
	left: 0;
	top: 0;
	z-index: 1;
	width: 180rpx;
	height: 100%;
	padding-top: 88rpx;
	background-color: #f5f5f5;
	overflow-y: scroll;
}
.container .left .list{
	width: 100%;
	hegiht: 90rpx;
	text-align: center;
	line-height: 90rpx;
	font-size: 26rpx;
	color: #333;
	position: relative;
}
.container .sign{
	position: absolute;
	height: 30rpx;
	width: 10rpx;
	left: 0;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	background-color: transparent;
}
.container .left .list.active{
	background-color: #fff;
}
.container .left .list.active .sign{
	background-color: #f70c12;
}
.container .right{
	position: fixed;
	left: 200rpx;
	top: 0;
	z-index: 1;
	width: 550rpx;
	height: 100%;
	padding: 92rpx 20rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow-y: scroll;
}
.container .right .classify_r{
	padding: 20rpx 20rpx 0;
	-webkit-box-shadow: 0 0 3px #ccc;
	        box-shadow: 0 0 3px #ccc;
	margin-bottom: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 100%;
}
.container .right .classify_r .big_name{
	font-size: 26rpx;
	color: #333;
}
.container .right .classify_r .clothes_box{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin-top: 20rpx;
}
.container .right .classify_r .clothes_box .box{
	width: 150rpx;
	margin-bottom: 20rpx;
	font-size: 24rpx;
	color: #333;
	text-align: center;
	overflow: hidden;
}
.container .right .classify_r .clothes_box .clothes_list{
	height: 150rpx;
	width: 150rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-bottom: 20rpx;
}
.container .right .classify_r .clothes_box .clothes_list image{
	width: 100%;
	height: 100%;
}

